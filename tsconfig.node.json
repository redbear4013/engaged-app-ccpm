{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/workers/**/*.ts",
    "src/services/**/*.ts",
    "src/lib/**/*.ts",
    "src/config/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/app",
    "src/components",
    "**/*.test.ts",
    "**/__tests__"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
